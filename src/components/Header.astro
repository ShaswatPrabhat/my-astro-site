---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
---

<header>
  <a href="/" style="font-size: 4ch">
    {SITE_TITLE}
  </a>
  <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="/notes">Notes</HeaderLink>
    <HeaderLink href="/library">Library</HeaderLink>
    <HeaderLink href="https://twitter.com/ShaswatPrabhat" target="_blank">
      Twitter
    </HeaderLink>
    <HeaderLink href="https://github.com/ShaswatPrabhat" target="_blank">
      GitHub
    </HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0 0 2em;
    align-self: flex-start;
  }
  h2 {
    margin: 0.5em 0;
  }
  a {
    text-decoration: none;
  }
  nav {
    margin-top: 3vh;
    width: 35vw;
    align-self: center;
  }
</style>
