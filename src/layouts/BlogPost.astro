---
import SiteLayout from "./SiteLayout.astro";
import { Image } from "@astrojs/image/components";
export interface Props {
  content: {
    title?: string;
    description?: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<SiteLayout>
  <article>
    {
      heroImage && (
        <Image
          src={heroImage}
          width={800}
          aspectRatio={16 / 9}
          alt="A Hero Image for the blog post"
        />
      )
    }
    <br />
    {title && <h3 class="title">{title}</h3>}
    {
      pubDate && (
        <div class="pub-date">
          <time>{pubDate}</time>
        </div>
      )
    }
    {description && <p class="description">ðŸ“– tl;dr: {description}</p>}
    {
      updatedDate && (
        <div class="updated-date">
          Last updated on <time>{updatedDate}</time>
        </div>
      )
    }
    <hr />
    <slot />
  </article>
</SiteLayout>
<style>
  img {
    max-width: 100vw;
  }
  .title {
    margin-bottom: 1vh;
  }
  .pub-date {
    margin-bottom: 10vh;
  }
  .description {
    font-size: larger;
    font-weight: bolder;
    margin-top: 10px;
    margin-bottom: 10px;
    font-style: italic;
  }
</style>
