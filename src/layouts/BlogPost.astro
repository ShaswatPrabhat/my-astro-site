---
import SiteLayout from "./SiteLayout.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<SiteLayout>
  <article>
    {
      heroImage && (
        <img
          src={heroImage}
          width="640"
          height="360"
          alt="A Hero Image for the blog post"
        />
      )
    }
    <br />

    <h3 class="title">{title}</h3>
    {
      pubDate && (
        <div class="pub-date">
          <time>{pubDate}</time>
        </div>
      )
    }
    {
      description && (
        <p style="font-size: larger; font-weight: bolder; margin-top: 10px; margin-bottom: 10px;">
          {description}
        </p>
      )
    }
    {
      updatedDate && (
        <div class="updated-date">
          Last updated on <time>{updatedDate}</time>
        </div>
      )
    }
    <hr />
    <slot />
  </article>
</SiteLayout>
<style>
  img {
    max-width: 100vw;
  }
  .title {
    margin-bottom: 1vh;
  }
  .pub-date {
    margin-bottom: 10vh;
  }
</style>
